<div class="container">
  <% @categories.each do |category| %>    
    
    <div class="card">
      <h3 class="card-title"><%= link_to "#{category.name}", category_path(category) %></h3>
      
      
      <%# <%= image_tag category.image if category.image.attached? %> 
      <p class="card-text"><%= category.description %></p>
      <section class="user-buttons">
        <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-info' %>

        <% if category.products.empty? %>
          <%= link_to 'Delete', category, method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?"} %>
        <% end %>
      </section>
    </div>
  <% end %>
</div>
