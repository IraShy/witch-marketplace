<div class="container">
  <h1>Blessed be thy wallet!</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Price</th>
  </tr>
  <% @order.products.each do |product| %>
    <tr>
      <td>
        <%= link_to product_path(product[:id]) do %>
          <%= product.name %>
        <% end %>
      </td>
      <td>
        <%= price_display(product.price) %>
      </td>
    </tr>
      
  <% end %>
</table>
  <h2>Total paid:</h2>
  <%= price_display(@total) %> 
</div>


  
    
