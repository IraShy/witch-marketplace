
<%= form_with model: @product, local: true do |form| %>

  <%= form.label :product_name %>
  <%= form.text_field :name, maxlength: 20 %>

  <%= form.label :description %>
  <%= form.text_field :description, maxlength: 255, size: 30 %>

  <%= form.label :category %>
  <%= form.collection_select(:category_id, Category.all, :id, :name, prompt: 'Select category') %>

  <%= form.label :price %>
  <%= form.text_field :price %>

  <%= form.label :image %>
  <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
  
  <%= form.submit %>
<% end %>